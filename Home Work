5 Задание 

fun main() {

    println("Enter first number")
    val firstnumber = readLine()!!
    while(false) {
        firstnumber.toIntOrNull()
        continue
        firstnumber == "Stop"
        break
    }

    println("Enter second number")
    val secondnumber = readLine()!!
    while(false) {
        firstnumber.toIntOrNull()
        continue
        secondnumber == "Stop"
        break
    }

    val result: Int = firstnumber.toInt() + secondnumber.toInt()
    print("The summ is: ")
    println(result)


}


 
         
         
         
         
         
         
         
         
         
         
         
         
         
